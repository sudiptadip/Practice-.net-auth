@using auth.Data;
@model  List<MovieDetail>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="min-height: 100vh" >
    
    <div class="row" >
        @foreach(var obj in Model)
        {
                <div class="col-xl-4 col-md-6 mb-5"  style="display: flex; justify-content: center" >
                    <div class="card shadow" style="width: 18rem">
                        <img style="height: 300px" class="card-img-top" src="@obj.Url" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title pb-3">@obj.MovieName</h5>
                        <a asp-controller="Home" asp-action="ShowDetails" asp-route-id="@obj.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>